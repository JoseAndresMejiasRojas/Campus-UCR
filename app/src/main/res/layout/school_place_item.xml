            <LinearLayout
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingLeft="20dp"
                android:paddingBottom="5dp">

                <ImageView
                    android:id="@+id/imageWiFi"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:paddingLeft="25dp" />

                <androidx.appcompat.widget.AppCompatCheckBox
                    android:id="@+id/checkboxWiFi"
                    android:layout_width="53dp"
                    android:layout_height="match_parent"
                    android:buttonTint="@color/blanco_UCR"
                    android:padding="25dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingLeft="20dp"
                android:paddingBottom="5dp">

                <ImageView
                    android:id="@+id/imagePc"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="10dp" />

                <androidx.appcompat.widget.AppCompatCheckBox
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:id="@+id/checkboxPC"
                    android:buttonTint="@color/blanco_UCR"
                    android:padding="25dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingLeft="20dp"
                android:paddingBottom="5dp">

                <ImageView
                    android:id="@+id/imageProjector"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="10dp" />

                <androidx.appcompat.widget.AppCompatCheckBox
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:id="@+id/checkboxProjector"
                    android:buttonTint="@color/blanco_UCR"
                    android:padding="25dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingLeft="20dp"
                android:paddingBottom="5dp">

                <ImageView
                    android:id="@+id/imageExtintor"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="10dp" />

                <androidx.appcompat.widget.AppCompatCheckBox
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:id="@+id/checkboxExtintor"
                    android:buttonTint="@color/blanco_UCR"
                    android:padding="25dp"/>
            </LinearLayout>

        </LinearLayout>
