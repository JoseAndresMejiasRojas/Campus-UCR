<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools = "http://schemas.android.com/tools"
    android:id="@+id/cardViewCommunity"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context = ".red_mujeres.ComunidadesRedMujeres"
    card_view:cardElevation="6dp"
    card_view:cardUseCompatPadding="true"
    card_view:layout_constraintTop_toBottomOf="parent"
    card_view:cardPreventCornerOverlap="false">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/cardViewCommunity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_Community_Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="Nombre de Comunidad"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_No_Members"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginBottom="8dp"
                android:text="No. Miembros"
                android:textColor="@color/black"
                android:textSize="12dp"
                android:textStyle="normal" />

            <ImageView
                android:id="@+id/image_Community"
                android:layout_width="match_parent"
                android:layout_height="165dp"
                android:scaleType="fitXY"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/community"
                />

            <TextView
                android:id="@+id/text_Description"
                style="@style/AppTheme.RedMujeres"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="DescripciÃ³n:"
                android:textColor="@color/black"
                android:textSize="12dp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/text_Description_Content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="Hablada de la descripcion"
                android:textColor="@color/black"
                android:textSize="12dp"
                android:textStyle="normal" />

            <Button
                android:id="@+id/button_Join_Community_CD"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:background="@color/azul_UCR"
                android:elevation="8dp"
                android:text="Unirse"
                android:textAppearance="@style/AppTheme.RedMujeres"
                android:textColor="@color/gris_claro_UCR"
                android:textSize="18sp"
                android:textStyle="bold"
                android:typeface="normal" />

        </LinearLayout>
    </RelativeLayout>

</androidx.cardview.widget.CardView>