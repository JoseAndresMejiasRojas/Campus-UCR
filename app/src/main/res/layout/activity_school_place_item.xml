<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="375dp"
    android:layout_height="400dp"
    android:padding="5dp"
    android:layout_gravity="center">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="390dp"
        app:cardBackgroundColor="@color/gris_claro_UCR"
        app:cardCornerRadius="25dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical">

            <TextView
                android:id="@+id/titleSchoolItem"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:fontFamily="@font/myriad_pro_bold"
                android:gravity="center_horizontal"
                android:text="Titulo"
                android:textColor="#000000"
                android:textSize="20dp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingLeft="20dp"
                android:paddingBottom="5dp">

                <TextView
                    android:text="Piso: "
                    android:fontFamily="@font/myriad_pro_semi"
                    android:gravity="right"
                    android:layout_width="156dp"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textSize="17dp"/>

                <TextView
                    android:id="@+id/floor"
                    android:fontFamily="@font/myriad_pro_semi"
                    android:gravity="left"
                    android:layout_width="156dp"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textSize="17dp"/>



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingLeft="20dp"
                android:paddingBottom="5dp">

                <TextView

                    android:text="Capacidad: "
                    android:fontFamily="@font/myriad_pro_semi"
                    android:gravity="right"
                    android:layout_width="156dp"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textSize="17dp"/>

                <TextView
                    android:id="@+id/capacity"
                    android:fontFamily="@font/myriad_pro_semi"
                    android:gravity="left"
                    android:layout_width="156dp"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textSize="17dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingLeft="20dp"
                android:paddingBottom="5dp">

                <TextView
                    android:text="DescripciÃ³n: "
                    android:fontFamily="@font/myriad_pro_semi"
                    android:gravity="right"
                    android:layout_width="156dp"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textSize="17dp"/>

                <TextView
                    android:id="@+id/desc"
                    android:fontFamily="@font/myriad_pro_semi"
                    android:gravity="left"
                    android:layout_width="156dp"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textSize="17dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingLeft="20dp"
                android:paddingBottom="5dp">

                <ImageView
                    android:id="@+id/imageWiFi"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="10dp" />

                <androidx.appcompat.widget.AppCompatCheckBox
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:id="@+id/checkboxWiFi"
                    android:gravity="end"
                    android:padding="25dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingLeft="20dp"
                android:paddingBottom="5dp">

                <ImageView
                    android:id="@+id/imagePc"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="10dp" />

                <androidx.appcompat.widget.AppCompatCheckBox
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:id="@+id/checkboxPC"
                    android:gravity="end"
                    android:padding="25dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingLeft="20dp"
                android:paddingBottom="5dp">

                <ImageView
                    android:id="@+id/imageProjector"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="10dp" />

                <androidx.appcompat.widget.AppCompatCheckBox
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:id="@+id/checkboxProjector"
                    android:gravity="end"
                    android:padding="25dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingLeft="20dp"
                android:paddingBottom="5dp">

                <ImageView
                    android:id="@+id/imageExtintor"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="10dp" />

                <androidx.appcompat.widget.AppCompatCheckBox
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:id="@+id/checkboxExtintor"
                    android:gravity="end"
                    android:padding="25dp"/>
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>